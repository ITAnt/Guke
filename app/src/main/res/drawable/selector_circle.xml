<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <stroke android:width="@dimen/dash_width" android:color="@color/color_bg" android:dashGap="@dimen/dash_width"></stroke>
            <solid android:color="@color/color_bg_light"></solid>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <stroke android:width="@dimen/dash_width" android:color="@color/color_bg" android:dashGap="@dimen/dash_width"></stroke>
            <solid android:color="@color/color_transparent"></solid>
        </shape>
    </item>

</selector>